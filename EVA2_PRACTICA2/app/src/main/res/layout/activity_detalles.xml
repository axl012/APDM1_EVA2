<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hipo.prop.app.axel.com.eva2_practica2.Detalles">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asignatura:"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/txtVwMateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fundamentos de programacion" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Creditos:"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/txtVwCreditos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Docente titular:"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/txtVwMaestro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mr. Bean" />

    <ImageView
        android:id="@+id/imgVwProfe"
        android:layout_width="148dp"
        android:layout_height="170dp"
        app:srcCompat="@drawable/mrbean" />

</LinearLayout>
